<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huanf.content.mapper.CourseBaseMapper">

    <!--课程分页查询-->
    <select id="coursePage" resultType="com.huanf.domain.entity.CourseBase">
        SELECT cb.*, cm.charge
        FROM course_base cb
        LEFT JOIN course_market cm ON cb.id = cm.id
        <where>
            <if test="ew != null and ew.sqlSegment != null">
                <trim prefix="AND" prefixOverrides="AND | OR">
                    ${ew.sqlSegment}
                </trim>

            </if>

        </where>

    </select>


</mapper>
